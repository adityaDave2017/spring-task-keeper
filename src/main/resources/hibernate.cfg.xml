<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.url">localhost:3306/eLibrary</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">jump</property>
        <property name="connection.password">secret</property>
        <property name="connection.autocommit">true</property>

        <mapping class="com.spring.simpleapp.model.Account"/>
        <mapping class="com.spring.simpleapp.model.Task"/>
    </session-factory>
</hibernate-configuration>